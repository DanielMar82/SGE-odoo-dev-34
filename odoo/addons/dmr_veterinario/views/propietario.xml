<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!-- Estas son las vistas de propietario las cuales son formulario (Form), lista (Tree), kanban y buscador (Search) -->

        <!-- FORM -->
        <record id="dmr_veterinario.propietario_form" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.form.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <form string="Propietario">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="dni" />
                            <field name="telefono" />
                            <field name="correo" />
                            <field name="direccion" />
                        </group>
                        <group>
                            <field name="paciente_ids" nolabel="1">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global">
                                                <div class="oe_kanban_details">
                                                    <strong><field name="name"/></strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="dmr_veterinario.propietario_tree" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.tree.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <tree string="Propietario">
                    <field name="name" />
                    <field name="dni" />
                    <field name="telefono" />
                    <field name="correo" />
                    <field name="direccion" />
                </tree>
            </field>
        </record>

        <!-- KANBAN -->
        <record id="dmr_veterinario.propietario_kanban" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.kanban.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>Nombre: <field name="name" /></li>
                                        <li>DNI: <field name="dni" /></li>
                                        <li>Telefono: <field name="telefono" /></li>
                                        <li>Correo: <field name="correo" /></li>
                                        <li>Direccion: <field name="direccion" /></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- SEARCH -->
        <record id="dmr_veterinario.propietario_search" model="ir.ui.view">
            <field name="name" >dmr_veterinario.propietario.search</field>
            <field name="model" >dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <search string="propietario">
                    <field name="name" />
                    <field name="dni" />
                    <field name="telefono" />
                    <field name="correo" />
                    <field name="direccion" />
                    <field name="paciente_ids" />
                </search>
            </field>
        </record>

    </data>
</odoo>
