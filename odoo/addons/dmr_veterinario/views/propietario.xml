<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="dmr_veterinario.propietario_form" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.form.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <form string="Propietario">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="dni" />
                            <field name="telefono" />
                            <field name="correo" />
                            <field name="direccion" />
                            <!-- <field name="paciente_id" /> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="dmr_veterinario.propietario_tree" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.tree.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <tree string="Propietario">
                    <field name="name" />
                        <field name="dni" />
                        <field name="telefono" />
                        <field name="correo" />
                        <field name="direccion" />
                        <!-- <field name="paciente_id" /> -->
                </tree>
            </field>
        </record>

        <record id="dmr_veterinario.propietario_kanban" model="ir.ui.view">
            <field name="name">dmr_veterinario.propietario.kanban.view</field>
            <field name="model">dmr_veterinario.propietario</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" t-att-data-id="record.id.raw_value">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>Nombre:<field name="name" /></li>
                                        <li>DNI: <field name="dni" /></li>
                                        <li>Telefono: <field name="telefono" /></li>
                                        <li>Correo: <field name="correo" /></li>
                                        <li>Direccion: <field name="direccion" /></li>
                                        <!-- <li>Paciente: <field name="paciente_id" /></li> -->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>

